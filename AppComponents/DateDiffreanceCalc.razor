@if (!string.IsNullOrEmpty(Time_Stamp))
{
    @if (((DateTime.Now - DateTime.Parse(Time_Stamp))).Days < 1.0d)
    {
        @switch (Convert.ToDouble((DateTime.Now - DateTime.Parse(Time_Stamp)).Hours))
        {
            case < 1:
                @($"منذ {((DateTime.Now - DateTime.Parse(Time_Stamp)).Minutes)} دقيقه")
                break;
            case >= 1:
                @($"منذ {(DateTime.Now - DateTime.Parse(Time_Stamp)).Hours} ساعة")
                break;
            default:
                break;
        }
    }
    else
    {
        @switch (Convert.ToDouble((DateTime.Now - DateTime.Parse(Time_Stamp)).Days))
        {
            case > 365:
                @($"منذ {((DateTime.Now - DateTime.Parse(Time_Stamp)).Days / 365)} سنه")
                break;
            case > 30:
                @($"منذ {((DateTime.Now - DateTime.Parse(Time_Stamp)).Days / 30)} شهر")
                break;
            case < 30:
                @($"منذ {(DateTime.Now - DateTime.Parse(Time_Stamp)).Days} يوم")
                break;
            default:
                break;
        }
    }
}
@code {
    [Parameter]
    public string? Time_Stamp { get; set; }
}
