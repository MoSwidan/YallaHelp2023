      align-items: center;
      margin-top: 50px;
      margin-right: auto;
      margin-bottom: 50px;
      margin-left: auto;
    }

    .section-head-text {
      margin-top: 0px;
      margin-right: 0px;
      margin-bottom: 5px;
      margin-left: 0px;
      font-size: 35px;
      font-weight: 700;
      line-height: 48px;
      color: #fd1b5b;
      margin: 0 0 10px 0;
    }

    .section-subhead-text {
      font-size: 25px;
      color: rgb(153, 153, 153);
      line-height: 35px;
      max-width: 470px;
      text-align: center;
      margin-top: 0px;
      margin-right: 0px;
      margin-bottom: 60px;
      margin-left: 0px;
    }

    .img-wrapper {
      width: 100%;
    }

    .team-card {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .social-media-links {
      width: 125px;
      display: flex;
      justify-content: space-between;
    }

    .name {
      font-size: 25px;
      font-weight: 700;
      color: rgb(102, 102, 102);
      margin-top: 19px;
      margin-right: 0px;
      margin-bottom: 5px;
      margin-left: 0px;
    }

    .position {
      font-size: 25px;
      font-weight: 700;
      color: #fd1b5b;
      margin-top: 0px;
      margin-right: 0px;
      margin-bottom: 50px;
      margin-left: 0px;
    }

    .team-card-container {
      width: 280px;
      margin: 0 0 40px 0;
    }

